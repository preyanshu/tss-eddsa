{
  "name": "multi-party-eddsa",
  "version": "1.0.0",
  "description": "Multi-Party EdDSA threshold signature library",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "commonjs",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "clean": "rm -rf dist",
    "lint": "eslint . --max-warnings 100",
    "check-types": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./MPCService": {
      "types": "./dist/mpc_service.d.ts",
      "default": "./dist/mpc_service.js"
    },
    "./CoordinatorService": {
      "types": "./dist/coordinator_service.d.ts",
      "default": "./dist/coordinator_service.js"
    },
    "./MPCClient": {
      "types": "./dist/mpc_client.d.ts",
      "default": "./dist/mpc_client.js"
    }
  },
  "keywords": [
    "mpc",
    "eddsa",
    "threshold",
    "signature",
    "cryptography",
    "multi-party"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@solana/web3.js": "^1.98.4",
    "multi-party-eddsa-node": "workspace:*"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "eslint": "^9.39.1",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
